class Triathlon:
  def __init__(self, first_name, last_name, location, swim_time, cycle_time, run_time):
    self.first_name = first_name
    self.last_name = last_name
    self.location = location
    self.swim_time = swim_time
    self.cycle_time = cycle_time
    self.run_time = run_time
  
  def total_time(self):
    total_time = self.swim_time + self.cycle_time + self.run_time
    return total_time
  
  def print_details(self):
    print(f"{self.first_name} {self.last_name} from {self.location} completed the triathlon in {self.total_time()} seconds - swim: {self.swim_time}s, cycle: {self.cycle_time}s, run: {self.run_time}s")

athlete1 = Triathlon("John", "Smith", "London", 600, 1800, 1200)
athlete1.print_details()
